    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/curse.jpeg",
        "32": "images/curse.jpeg",
        "48": "images/curse.jpeg",
        "128": "images/curse.jpeg"
      }
    },
    
    "content_scripts": [
	   {
	     "matches": ["https://www.facebook.com/*", "https://developer.chrome.com/*", "https://www.twitter.com/*"],
	     "run_at": "document_idle",
	     "all_frames": true,
         "js": ["jquery-3.3.1.min.js", "content_script.js"]
	   }
	],

    "icons": {
      "16": "images/curse.jpeg",
      "32": "images/curse.jpeg",
